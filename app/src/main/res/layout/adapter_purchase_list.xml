<!--        android:textColor="@color/black"-->
<!--        android:textSize="9sp"-->
<!--        tools:ignore="SmallSp"-->
<!--        tools:text="ゲンバンヒョウキ" />-->

    <TextView
        android:id="@+id/txvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvTitleDescription"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/rltImage"
        android:fontFamily="@font/noto_sans_regular"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="1:59:59" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvTime"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/rltImage"
        android:fontFamily="@font/noto_sans_regular"
        android:includeFontPadding="false"
        android:text="@string/date"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvTime"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/txtDate"
        android:fontFamily="@font/noto_sans_regular"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="13sp"
        tools:text="2022/2/10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_operation"
        android:visibility="gone" />

</RelativeLayout>