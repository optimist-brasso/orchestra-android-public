<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/txtRetake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="29dp"
        android:background="@drawable/radius_ten_black_65_percent"
        android:fontFamily="@font/noto_sans_regular"
        android:includeFontPadding="false"
        android:paddingStart="78dp"
        android:paddingTop="44dp"
        android:paddingEnd="77dp"
        android:paddingBottom="44dp"
        android:text="@string/retake"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtSaveRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="28dp"
        android:background="@drawable/radius_ten_black_65_percent"
        android:fontFamily="@font/noto_sans_regular"
        android:includeFontPadding="false"
        android:paddingStart="91dp"
        android:paddingTop="44dp"
        android:paddingEnd="91dp"
        android:paddingBottom="43dp"
        android:text="@string/confirm"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>