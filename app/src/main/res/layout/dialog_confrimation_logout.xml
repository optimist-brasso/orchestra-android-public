<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:alpha=".8"
        android:background="@drawable/black_bg_dialog"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imvCancel"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/ic_cancel" />

        <TextView
            android:id="@+id/txvLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imvCancel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/text_sure_want_to_logout"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txvLogout"
            android:layout_marginStart="67dp"
            android:layout_marginTop="176dp"
            android:layout_marginEnd="67dp"
            android:background="@drawable/button_bg_white"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="6dp"
            android:paddingBottom="9dp"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textColor="@color/txtColorGrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLogout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/noto_sans_regular"
            android:text="@string/cancel"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>