<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:alpha=".8"
        android:background="@drawable/black_bg_dialog"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imvCancel"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/ic_cancel" />

        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imvCancel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="English Title" />

        <TextView
            android:id="@+id/txvTitleJp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="日本語表記の楽曲名" />

        <TextView
            android:id="@+id/txvBandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvTitleJp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="りゅーとぴあ 新潟市民芸術文化会館
コンサートホール" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvBandName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/noto_sans_regular"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="¥200" />

        <TextView
            android:id="@+id/txvBuyQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrice"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/question_to_buy"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvBuyQuestion"
            android:layout_centerInParent="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="67dp"
            android:background="@drawable/button_bg_white"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="6dp"
            android:paddingBottom="9dp"
            android:text="@string/buy"
            android:textAllCaps="false"
            android:textColor="@color/txtColorGrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBuy"
            android:layout_centerInParent="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="67dp"
            android:background="@drawable/button_bg_white"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="6dp"
            android:paddingBottom="9dp"
            android:text="@string/add_to_cart"
            android:textAllCaps="false"
            android:textColor="@color/txtColorGrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAddToCart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/noto_sans_regular"
            android:includeFontPadding="false"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>