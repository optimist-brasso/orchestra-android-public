<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSessionLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rltBackgroundLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvBoughtStatus" />

    <ImageView
        android:id="@+id/imvBoughtStatus"
        android:layout_width="@dimen/dim_18dp"
        android:layout_height="@dimen/dim_18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/image_description"
        android:src="@drawable/session_layout_click"
        android:visibility="gone"
        app:tint="@color/white" />

</RelativeLayout>